{
    "name": "mcos",
    "version": "1.0.0-alpha1",
    "description": "a server",
    "author": "Drazi Crendraven <drazisil@hey.com>",
    "license": "AGPL-3.0",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@github.com:drazisil/mcos.git"
    },
    "scripts": {
        "clean": "rm -rf **/node_modules node_modules",
        "start": "npx tsx --import ./instrument.mjs --openssl-legacy-provider --env-file=.env src/nps_server.ts",
        "check:all": "pnpm run -r --stream check",
        "lint:all": "pnpm run -r --stream lint",
        "format:all": "pnpm run -r --stream format",
        "test:packages": "pnpm run -r --stream test",
        "test": "vitest --run --coverage",
        "types:db": "pnpm --filter=rusty-motors-database run types:db",
        "types": "dotenvx run -- pnpm run types:db",
        "migrate": "dotenvx run pg-migrations apply -- --directory migrations",
        "prepare": "husky",
        "build": "tsc"
    },
    "files": [
        "README.md",
        "CHANGELOG.md",
        "AUTHORS"
    ],
    "type": "module",
    "dependencies": {
        "@databases/pg": "^5.5.0",
        "@dotenvx/dotenvx": "^1.45.1",
        "@fastify/sensible": "^6.0.3",
        "@mikro-orm/core": "^6.4.16",
        "@mikro-orm/postgresql": "^6.4.16",
        "@mikro-orm/reflection": "^6.4.16",
        "@rustymotors/binary": "",
        "@rustymotors/protocol": "file:libs/@rustymotors/protocol",
        "@rustymotors/rooms": "file:libs/@rustymotors/rooms",
        "@sentry/node": "^9.32.0",
        "@sentry/profiling-node": "9.32.0",
        "bcrypt": "^6.0.0",
        "concurrently": "^9.2.1",
        "debug": "^4.4.1",
        "fastify": "^5.4.0",
        "moment": "^2.30.1",
        "pino-debug": "^3.0.0",
        "pklib-ts": "github:drazisil/pklib-ts",
        "rusty-motors-shared": "^1.0.0-next.0",
        "slonik": "^48.6.0",
        "ts-node": "10.9.2"
    },
    "devDependencies": {
        "@biomejs/biome": "2.0.5",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@databases/pg-migrations": "^5.0.3",
        "@databases/pg-test": "^3.1.2",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.29.0",
        "@sentry/cli": "^2.46.0",
        "@tsconfig/node-lts": "^22.0.2",
        "@tsconfig/node20": "^20.1.6",
        "@types/bcrypt": "^5.0.2",
        "@types/chai": "5.2.2",
        "@types/node": "^22.15.33",
        "@types/sinon": "17.0.4",
        "@types/sinon-chai": "4.0.0",
        "@typescript-eslint/eslint-plugin": "^8.35.0",
        "@typescript-eslint/parser": "^8.35.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "5.5.1",
        "globals": "^16.2.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "prettier": "3.6.1",
        "prettier-eslint": "16.4.2",
        "rimraf": "^6.0.1",
        "standard-version": "^9.5.0",
        "tslib": "^2.8.1",
        "tsx": "4.20.3",
        "typescript": "^5.8.3",
        "typescript-eslint-language-service": "^5.0.5",
        "vite": "^7.0.0",
        "vitest": "^3.2.4"
    },
    "c8": {
        "all": true,
        "reporter": [
            "text",
            "cobertura",
            "html",
            "lcov"
        ],
        "exclude": [
            "coverage",
            "**/*.test.m{j,t}s",
            "docs",
            "docs2"
        ]
    },
    "lint-staged": {
        "**/*.js": "eslint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "packageManager": "npm@11.6.0+sha512.77f3fb0dbbd881835d7bd1217deabdf7ed77fc4ec4f363df64fc3cb986404abf6c437661041080f5c5d225103508e7c9ea30cb2742b7e942675d05a10af2d7b9",
    "workspaces": [
        "libs/@rustymotors/binary",
        "packages/cli",
        "packages/database",
        "packages/gateway",
        "packages/lobby",
        "packages/login",
        "packages/nps",
        "packages/persona",
        "packages/pklib-ts",
        "packages/shard",
        "packages/shared",
        "packages/shared-packets",
        "packages/transactions",
        "src/chat"
    ]
}
